<?xml version="1.0" ?>
<launch>
  <!-- The planning and execution components of MoveIt! configured to run -->
  <!-- using the ROS-Industrial interface. -->
 
  <rosparam command="load" file="$(find abb_irb1200_support)/config/joint_names_irb1200_5_90.yaml"/>
 
  <!-- the "sim" argument controls whether we connect to a Simulated or Real robot -->
  <arg name="sim" default="true" />
  <arg name="robot_ip" unless="$(arg sim)" />
  <arg name="rviz" default="true"/>
  <arg name="use_ftp" default="true"/>
  <arg name="use_db" default="false"/>
 
  <!-- load the robot_description parameter before launching ROS-I nodes -->
  <include file="$(find godel_irb1200_moveit_config)/launch/planning_context.launch" >
    <arg name="load_robot_description" value="true" />
  </include>

  <!-- run the robot simulator and action interface nodes -->
  <group if="$(arg sim)">
    <include file="$(find industrial_robot_simulator)/launch/robot_interface_simulator.launch" />
  </group>

  <!-- run the "real robot" interface nodes -->
  <!--   - this typically includes: robot_state, motion_interface, and joint_trajectory_action nodes -->
  <!--   - replace these calls with appropriate robot-specific calls or launch files -->
  <group unless="$(arg sim)">
    <group if="$(arg use_ftp)">
      <include file="$(find godel_irb1200_moveit_config)/launch/irb1200_robot_ftp_interface.launch">
        <arg name="robot_ip" value="$(arg robot_ip)"/>
        <arg name="J23_coupled" value="false"/>
        <arg name="ftp_user" value="Default User"/>
        <arg name="ftp_pwd" value="robotics"/>
      </include>
    </group>

    <!-- If we're not simulating and not using the ABB FTP server... -->
    <group unless="$(arg use_ftp)">
      <include file="$(find abb_irb1200_support)/launch/robot_interface_download_irb1200.launch" >
        <arg name="robot_ip" value="$(arg robot_ip)"/>
      </include>
    </group>
  </group>

  <!-- publish the robot state (tf transforms) -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />

  <include file="$(find godel_irb1200_moveit_config)/launch/move_group.launch">
    <arg name="publish_monitored_planning_scene" value="true" />
  </include>

  <include if="$(arg rviz)" file="$(find godel_irb1200_moveit_config)/launch/moveit_rviz.launch">
    <arg name="config" value="true"/>
  </include>
  
  <include if="$(arg use_db)" file="$(find godel_irb1200_moveit_config)/launch/default_warehouse_db.launch" />

</launch>

